<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">


    <com.rove.paanisystem.WaveLoadingView
        android:id="@+id/waveLoadingView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_275sdp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:elevation="@dimen/_1sdp"
        android:translationZ="@dimen/_1sdp"
        app:wlv_borderColor="@color/colorAccent"
        app:wlv_borderWidth="2dp"
        app:wlv_progressValue="50"
        app:wlv_round_rectangle="true"
        app:wlv_shapeType="rectangle"
        app:wlv_titleCenter="N/A"
        app:wlv_titleCenterColor="#FFA500"
        app:wlv_titleCenterSize="@dimen/_25ssp"
        app:wlv_waveAmplitude="50"
        app:wlv_waveColor="@color/colorAccent" />

    <RelativeLayout
        android:id="@+id/start_rl"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="wrap_content"
        android:layout_above="@id/stop_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/relative_layout_curved_color_accent_10dp"
        android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Monitor Water"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            style="@style/TextRegularMedium"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stop_rl"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/relative_layout_curved_color_accent_10dp"
        android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Stop"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            style="@style/TextRegularMedium" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        style="@style/TextBoldLarge"
        android:text="IOT Smart Home"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15ssp" />

</RelativeLayout>