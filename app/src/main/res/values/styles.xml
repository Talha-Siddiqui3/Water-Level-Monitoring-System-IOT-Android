<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>


    <style name="TextRegularMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#282828</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="TextRegularSmallBig" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#282828</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>


    <style name="TextRegularSmall" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#282828</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="TextRegularLarge" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#282828</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>


    <style name="TextBoldSmall" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>


    <style name="TextBoldSmallBig" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>


    <style name="TextBoldMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>


    <style name="TextBoldLarge" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>



</resources>
